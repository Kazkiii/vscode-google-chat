{
  "name": "google-chat",
  "displayName": "Google Chat",
  "description": "VSCode extension lets you use Google Chat directly within your editor. With a dedicated sidebar, you can access chat spaces, direct messages, and interact with your team without switching apps.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "google",
    "chat",
    "google chat"
  ],
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kazkiii/vscode-google-chat"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "googleChat.openView",
        "title": "Open Google Chat"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "googleChat",
          "title": "Google Chat",
          "icon": "assets/chat-icon.svg"
        }
      ]
    },
    "views": {
      "googleChat": [
        {
          "type": "webview",
          "id": "googleChat.view",
          "name": "Google Chat"
        }
      ]
    },
    "configuration": {
      "title": "Google Chat",
      "properties": {
        "googleChat.clientId": {
          "type": "string",
          "default": "",
          "description": "The Client ID for Google Chat API."
        },
        "googleChat.clientSecret": {
          "type": "string",
          "default": "",
          "description": "The Client Secret for Google Chat API."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/server-destroy": "^1.0.4",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@googleapis/chat": "^32.0.0",
    "open": "^10.1.0",
    "server-destroy": "^1.0.1"
  }
}
